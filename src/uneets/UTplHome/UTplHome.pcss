/* UTplHome */
div.u_tpl-home {
  > .main-content {
    background: map-get($colors, white);
    padding: 15px 0;
  }

  .u_tpl-home--featured {
    padding: 15px 0;
    margin-top: -30px; // first featured article goes on top
    @include for-bp(mobile-lg) {
      margin-top: 0;
    }
  }

  .u_tpl-home--banner {
    padding: 15px 0 0 0;
  }
}
