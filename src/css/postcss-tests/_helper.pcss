// Beginning of Shame.scss, this file should be EMPTY.

body {
  font-size: 16px;
  // This is in shame css
}

@mixin thisIsAMixinWithoutVars {
  font-size: 30px;
  line-height: 1em;
}

@mixin thisIsAMixinWithVars($fz, $lh) {
  font-size: $fz;
  line-height: $lh;
}

@mixin thisIsAMixinWithVarsAndDefaults($fz, $lh: 1em) {
  font-size: $fz;
  line-height: $lh;
}

$bps: (
  mobile-xs: 320px,
  mobile-sm: 375px,
  mobile-md: 480px,
  mobile-lg: 620px,
  tablet-sm: 720px,
  tablet-md: 800px,
  tablet-lg: 940px,
  desktop-sm: 1100px,
  desktop-md: 1200px,
  desktop-lg: 1350px,
  desktop-xlg: 1500px,
  desktop-xxlg: 1600px
);


// MAPGET!
// https://github.com/Scrum/postcss-map-get
@mixin using-mapget($bp) { // this does not work with default values
  max-width: map-get($bps, $bp);
}